#
# makefile for Linux (x86, PPC, alpha ...)
#

OPTFLAGS=-O3 -flto

ALLFLAGS=${OPTFLAGS} -Wno-c++11-narrowing -pipe \
    	-D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE \
	-DNDEBUG -D_REENTRANT -DENV_UNIX \
	-D_7ZIP_LARGE_PAGES \
	$(LOCAL_FLAGS)

CXX=clang++
CC=clang
CC_EXE=-fPIE
LINK_EXE=-s -fPIE
CC_SHARED=-fPIC
LINK_SHARED=-s -fPIC -shared

LOCAL_LIBS=-lpthread
LOCAL_LIBS_DLL=$(LOCAL_LIBS) -ldl

OBJ_CRC32=$(OBJ_CRC32_C)
OBJ_AES=

